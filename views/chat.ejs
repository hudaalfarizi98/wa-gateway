<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <!-- Misal gunakan Bootstrap untuk styling -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .chat-container {
      max-width: 800px;
      margin: auto;
      margin-top: 20px;
    }
    .message {
      padding: 10px;
      border-bottom: 1px solid #e9ecef;
    }
    .message:last-child {
      border-bottom: none;
    }
    .timestamp {
      font-size: 0.8rem;
      color: #6c757d;
    }
  </style>
</head>
<body>
  <div class="container chat-container">
    <h2 class="mb-4">Chat: <%= chat.name %></h2>
    <div class="card">
      <div class="card-body">
        <% if (messages && messages.length) { %>
          <% messages.reverse().forEach(function(message) { %>
            <div class="message">
              <p><strong><%= message.from === chat.id._serialized ? message.from : 'You' %></strong>: <%= message.body %></p>
              <p class="timestamp"><%= new Date(message.timestamp).toLocaleString() %></p>
            </div>
          <% }); %>
        <% } else { %>
          <p>Tidak ada pesan.</p>
        <% } %>
      </div>
    </div>
    <a href="/chats" class="btn btn-secondary mt-3">Kembali ke Daftar Chat</a>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
