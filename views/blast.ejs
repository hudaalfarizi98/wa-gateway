<!-- views/blast.ejs -->

<div class="card">
    <div class="card-header">
      <h3 class="card-title">Blast Pesan ke Phone Book</h3>
    </div>
    <div class="card-body">
      <% if (status === 'done') { %>
        <div class="alert alert-success">
          Blast pesan selesai.
        </div>
      <% } else if (status === 'error') { %>
        <div class="alert alert-danger">
          Terjadi kesalahan saat blast pesan.
        </div>
      <% } else if (status === 'noContacts') { %>
        <div class="alert alert-warning">
          Tidak ada kontak di Phone Book.
        </div>
      <% } %>
      <form action="/blast" method="post">
        <div class="form-group">
          <label for="message">Pesan</label>
          <textarea class="form-control" id="message" name="message" rows="5" placeholder="Tulis pesan yang ingin dikirim ke semua kontak" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Blast Pesan</button>
      </form>
    </div>
  </div>
  